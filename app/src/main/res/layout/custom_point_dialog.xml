<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dialog_layout_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/public_padding_10"
        android:background="@drawable/shape_dialog_layout_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_custompoint_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.2"
            android:text="标题"
            android:layout_marginLeft="@dimen/public_margin_20"
            android:layout_marginTop="@dimen/public_margin_10"
            android:textColor="@color/hei_text_color"
            android:textSize="@dimen/sp_15" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/public_margin_10"
            android:background="@color/divider_line_color"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_custompoint_dialog_contnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/public_margin_10"
            android:layout_marginLeft="@dimen/public_margin_20"
            android:layout_marginRight="@dimen/public_margin_20"
            android:layout_marginTop="@dimen/public_margin_10"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.2"
            android:text="内容"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_custompoint_dialog_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="@dimen/public_margin_10"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_custompoint_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_dialog_button_selector"
                android:paddingRight="@dimen/public_padding_12"
                android:paddingLeft="@dimen/public_padding_12"
                android:paddingTop="@dimen/public_padding_5"
                android:paddingBottom="@dimen/public_padding_5"
                android:text="取消"
                android:textColor="@color/gray_text_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txt_custompoint_dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_dialog_button_selector"
                android:paddingRight="@dimen/public_padding_12"
                android:paddingLeft="@dimen/public_padding_12"
                android:paddingTop="@dimen/public_padding_5"
                android:paddingBottom="@dimen/public_padding_5"
                android:text="确定"
                android:textColor="@color/hei_text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>