<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_menu_child_dialog_bg">

        <RelativeLayout
            android:id="@+id/rl_menu_child_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_menu_child_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/public_padding_15"
                android:paddingTop="@dimen/public_padding_15"
                android:paddingRight="@dimen/public_padding_15"
                android:paddingBottom="@dimen/public_padding_15"
                android:text=""
                android:textColor="@color/hei_text_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </RelativeLayout>


        <ListView
            android:id="@+id/lv_menu_child_dialog_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_menu_child_dialog_title"
            android:divider="@null"
            android:scrollbars="none" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_menu_child_dialog_title"
            android:background="@drawable/img_shadow_top_line" />
    </RelativeLayout>


</LinearLayout>
